<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity">

    <ImageView
        android:id="@+id/iv_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/img_1"
        android:tint="@color/black_faded" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="20dp">

        <ImageView
            android:id="@+id/edt_ferrari_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@color/white_faded"
            android:src="@drawable/img_ferrari_logo" />

        <EditText
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edt_ferrari_logo"
            android:drawableStart="@drawable/ic_name_tint"
            android:drawablePadding="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:hint="@string/hint_name"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edt_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edt_name"
            android:layout_marginBottom="20dp"
            android:drawableStart="@drawable/ic_username_tint"
            android:drawablePadding="20dp"
            android:hint="@string/hint_username"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_password_tint"
            android:drawablePadding="20dp"
            android:layout_below="@id/edt_username"
            android:layout_marginBottom="20dp"
            android:hint="@string/hint_password"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edt_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_confirm_password_tint"
            android:drawablePadding="20dp"
            android:layout_below="@id/edt_password"
            android:layout_marginBottom="40dp"
            android:hint="@string/hint_confirm_password"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edt_confirm_password"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/teal_700"
            android:padding="12dp"
            android:text="Sign Up"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/v_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_sign_up"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Already Have An Account?"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:text="Sign In"
                android:textColor="@color/teal_700"
                android:textSize="18sp" />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>